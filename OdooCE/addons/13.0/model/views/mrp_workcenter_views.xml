<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <!-- Workcenter -->
    <record id="mrp_workcenter_view_inherit" model="ir.ui.view">
        <field name="name">mrp.workcenter.view.form.inherit</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="/form/sheet" position="before">
                    <header>
                        <button type="object" name="add_crew_member_btn" string="Add Crew Members" icon="fa-plus" class="oe_highlight"/>
                    </header>
                </xpath>

                <xpath expr="//div[@name='button_box']" position="inside">
                    <field name="resource_type" invisible="1"/>
                    <button name="show_alternative_btn"
                        class="oe_stat_button"
                        icon="fa-users"
                        attrs="{'invisible': [('resource_type', '=', 'alternative')]}"
                        type="object">
                        <div class="o_stat_info">
                            <span class="o_stat_value">
                                <field name="alternative_qty" widget="statinfo" string="Alternative(s)" readonly="1"/>
                            </span>
                            <span class="o_stat_text">
                                Alternative(s)
                            </span>
                        </div>
                    </button>
                </xpath>
                <field name="code" position="after">
                    <field name="alternative_qty"/>
                </field>

                <field name="resource_calendar_id" position="after">
                    <field name="department_id" string="Parent Department" />
                </field>
                <field name="alternative_workcenter_ids" position="replace">
                </field>

                <xpath expr="/form/sheet/notebook" position="inside">
                    <page string="Crew Members">
                        <field name="crew_member_ids" nolabel="1">
                            <tree editable="top" create="false">
                                <field name="product_id" readonly="1"/>
                                <field name="quantity"/>
                                <field name="product_price"/>
                                <field name="member_cost"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="mrp.mrp_workcenter_action" model="ir.actions.act_window">
        <field name="domain">[('resource_type', '=', 'template')]</field>
    </record>

    <record id="mrp_workcenter_alternative_tree_view" model="ir.ui.view">
        <field name="name">mrp.workcenter.alternative.tree</field>
        <field name="model">mrp.workcenter</field>
        <field name="arch" type="xml">
            <tree string="Work Center" editable="bottom" create="0">
                <field name="code" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" invisible="1"/>
                <field name="department_id" readonly="1"/>
                <field name="contract_id" domain="[('state', '=', 'open')]"/>
                <field name="contract_department_id" readonly="1"/>
                <field name="employee_id" readonly="1"/>
                <field name="employee_department_id" readonly="1"/>
                <field name="resource_calendar_id"/>
            </tree>
        </field>
    </record>
    <record id="mrp_workcenter_alternative_action" model="ir.actions.act_window">
        <field name="name">Work Centers Alternative</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.workcenter</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('resource_type', '=', 'alternative')]</field>
        <field name="view_id" eval="mrp_workcenter_alternative_tree_view"/>
    </record>

    <menuitem
    id="menu_mrp_plm_workcenters_alternative"
    name="Work Centers Alternative"
    parent="mrp.menu_mrp_bom"
    action="mrp_workcenter_alternative_action"
    groups="mrp.group_mrp_routings"
    sequence="100"/>

    <!-- Crew Member -->
    <record id="mrp_workcenter_member_form_view" model="ir.ui.view">
        <field name="name">mrp.workcenter.member.form.view</field>
        <field name="model">mrp.workcenter.member</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="4">
                        <field name="product_id" options="{'no_create': True}"
                            domain="[('product_key', 'in', ['crew', 'labor'])]" colspan="2"/>
                        <field name="quantity" colspan="2"/>
                        <field name="product_price" colspan="2"/>
                        <field name="member_cost" colspan="2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Productivity Menus -->
    <menuitem id="menu_aci_workcenter_productivity"
        name="Productivity"
        groups="mrp.group_mrp_routings"
        sequence="20"
        parent="mrp.menu_mrp_configuration"/>

    <!--
    <delete model="ir.ui.menu" id="mrp.menu_mrp_workcenter_productivity_loss"/>
    -->

    <menuitem id="menu_aci_test_workcenter_productivity_loss"
            action="mrp.mrp_workcenter_productivity_report_blocked"
            groups="mrp.group_mrp_routings"
            sequence="21"
            parent="menu_aci_workcenter_productivity"/>

    </data>
</odoo>
