<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Product UoM Category -->
        <record id="product_uom_categ_tree_view" model="ir.ui.view">
            <field name="name">product.uom.categ.tree.view</field>
            <field name="model">uom.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Product UoM -->
        <record id="product_uom_form_view_inherit" model="ir.ui.view">
            <field name="name">product.uom.form.view.inherit</field>
            <field name="model">uom.uom</field>
            <field name="inherit_id" ref="uom.product_uom_form_view"/>
            <field name="arch" type="xml">
                <field name="name" position="replace">
                    <field name="create_date" invisible="1"/>
                    <field name="name"/>
                    <field name="symbol"/>
                </field>

                <field name="category_id" position="attributes">
                    <attribute name="attrs">{'readonly': [('create_date', '!=', False)]}</attribute>
                </field>
            </field>
        </record>

    </data>
</odoo>
