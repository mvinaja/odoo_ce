<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="update_sequence_wizard_form_view" model="ir.ui.view">
            <field name="name">update.sequence.wizard.form.view</field>
            <field name="model">update.sequence.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="4">
                            <field name="start_sequence" colspan="2"/>
                            <field name="increment" colspan="2"/>
                        </group>
                        <footer>
                            <button type="object" name="update_sequence_btn" string="Update Sequence" class="btn-primary"/>
                            <button special="cancel" string="Cancel" class="btn-default"/>
                        </footer>
                  </sheet>
                </form>
            </field>
        </record>

        <record id="update_template_wbs_wizard_form_view" model="ir.ui.view">
            <field name="name">update.template.wbs.wizard.form.view</field>
            <field name="model">update.sequence.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="4">
                            <field name="start_sequence" colspan="2"/>
                            <field name="increment" colspan="2"/>
                        </group>
                        <footer>
                            <button type="object" name="update_wbs_btn" string="Update WBS" class="btn-primary"/>
                            <button special="cancel" string="Cancel" class="btn-default"/>
                        </footer>
                  </sheet>
                </form>
            </field>
        </record>

        <record id="update_product_sequence_wizard_form_view" model="ir.ui.view">
            <field name="name">update.product.sequence.wizard.form.view</field>
            <field name="model">update.sequence.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="increment"/>
                        </group>
                        <footer>
                            <button type="object" name="update_product_btn" string="Update Product" class="btn-primary"/>
                            <button special="cancel" string="Cancel" class="btn-default"/>
                        </footer>
                  </sheet>
                </form>
            </field>
        </record>

        <record id="update_sequence_action" model="ir.actions.act_window">
            <field name="name">Components</field>
            <field name="res_model">update.sequence.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_ids"
                eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('aci_product.update_sequence_wizard_form_view')})]"/>
        </record>

        <record id="update_template_wbs_action" model="ir.actions.act_window">
            <field name="name">Template WBS</field>
            <field name="res_model">update.sequence.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_ids"
                eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('aci_product.update_template_wbs_wizard_form_view')})]"/>
        </record>

        <record id="update_product_sequence_action" model="ir.actions.act_window">
            <field name="name">Product Sequence</field>
            <field name="res_model">update.sequence.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_ids"
                eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('aci_product.update_product_sequence_wizard_form_view')})]"/>
        </record>

    </data>
</odoo>
