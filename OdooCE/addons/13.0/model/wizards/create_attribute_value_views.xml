<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="create_product_attribute_value_wizard_form" model="ir.ui.view">
            <field name="name">create.product.attribute.value.wizard.form</field>
            <field name="model">create.product.attribute.value.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <label for="attribute_id"/>
                            <div class="oe_title" colspan="2">
                                <h1><field name="attribute_id" readonly="1"/></h1>
                            </div>
                            <field name="quantity" required="1"/>
                        </group>
                        <group>
                            <group string="Sequence" colspan="2">
                                <field name="sequence_start" required="1"/>
                                <field name="sequence_increment" required="1"/>
                                <field name="digits"/>
                            </group>
                            <group string="Code" colspan="2">
                                <field name="code_length"/>
                                <field name="prefix"/>
                                <field name="suffix"/>
                            </group>
                        </group>
                    </group>
                    <footer>
                        <button name="create_value_btn" string="Create Attribute Values" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="create_product_attribute_value_wizard" model="ir.actions.act_window">
            <field name="name">Create Product Attribute Values</field>
            <field name="res_model">create.product.attribute.value.wizard</field>
            <field name="target">new</field>
            <field name="view_ids"
               eval="[(5, 0, 0),
                   (0, 0, {'view_mode': 'form', 'view_id': ref('create_product_attribute_value_wizard_form')})]"/>
        </record>

    </data>
</odoo>
