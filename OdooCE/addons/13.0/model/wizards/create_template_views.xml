<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="create_product_template_wizard_form" model="ir.ui.view">
            <field name="name">create.product.template.wizard.form</field>
            <field name="model">create.product.template.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group string="Template">
                            <field name="quantity" required="1"/>
                            <field name="category_id" required="1"
                                domain="[('type','!=','view')]"/>
                            <field name="type" required="1"/>
                            <field name="uom_id" required="1"/>
                            <field name="uom_po_id" required="1"/>
                            <field name="standard_price"/>
                        </group>
                        <group>
                            <group string="Code" colspan="2">
                                <field name="prefix" required="1"/>
                                <field name="suffix"/>
                                <field name="code_start"/>
                                <field name="code_increment"/>
                                <field name="code_digits"/>
                            </group>
                            <group string="Sequence" colspan="2">
                                <field name="sequence_start" required="1"/>
                                <field name="sequence_increment" required="1"/>
                            </group>
                        </group>

                    </group>
                    <footer>
                        <button name="create_template_btn" string="Create Product Template" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="create_product_template_wizard" model="ir.actions.act_window">
            <field name="name">Create Product Template</field>
            <field name="res_model">create.product.template.wizard</field>
            <field name="target">new</field>
            <field name="view_ids"
               eval="[(5, 0, 0),
                   (0, 0, {'view_mode': 'form', 'view_id': ref('create_product_template_wizard_form')})]"/>
        </record>

    </data>
</odoo>
