<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Crew Member -->
        <record id="mrp_workcenter_member_tree_view" model="ir.ui.view">
            <field name="name">mrp.workcenter.member.tree.view</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <tree action='[
                    {
                        "name": "Add Member",
                        "act": "add_workcen_member_btn",
                        "views": [{"module": "aci_product", "xml_id": "add_workcenter_member_wizard_form_view", "type": "form"}],
                        "src_model": "mrp.workcenter.member",
                        "res_model": "add.workcenter.member.wizard"
                    }]' create="false" delete="false">
                <!--
                <tree>
                    -->
                    <field name="categ_id"/>
                    <field name="default_code"/>
                    <field name="name"/>
                    <field name="attribute_value_ids" widget="many2many_tags" groups="product.group_product_variant"/>
                    <field name="lst_price"/>
                    <field name="price" invisible="not context.get('pricelist',False)"/>
                    <field name="uom_id" options="{'no_open': True, 'no_create': True}" groups="product.group_uom"/>
                </tree>
            </field>
        </record>

        <record id="add_workcenter_member_wizard_form_view" model="ir.ui.view">
            <field name="name">add.workcenter.member.wizard.form.view</field>
            <field name="model">add.workcenter.member.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="workcen_id" readonly="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button type="object" name="add_member_btn" string="Add Member" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
