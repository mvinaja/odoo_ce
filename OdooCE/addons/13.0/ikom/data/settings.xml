<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ikom.sales_settings" model='res.config.settings'>
            <field name="group_product_variant" eval='True'/>
            <field name="module_sale_product_configurator" eval='True'/>
            <field name="group_uom" eval='True'/>
            <field name="group_discount_per_so_line" eval='True'/>
            <field name="currency_id" ref="base.MXN"/>
            <field name="group_product_pricelist" eval='True'/>
            <field name="group_stock_production_lot" eval='True'/>
            <field name="group_stock_multi_warehouses" eval='True'/>
            <field name="group_stock_multi_locations" eval='True'/>
            <field name="group_stock_packaging" eval='True'/>
            <field name="theme_default_sidebar_preference">small</field>
            <field name="theme_default_chatter_preference">normal</field>
            <field name="theme_background_blend_mode">normal</field>
            <field name="theme_color_brand">#003399</field>
            <field name="theme_color_primary">#0087f7</field>
            <field name="theme_color_required">#FFAF00</field>
            <field name="theme_color_menu">#003399</field>
            <field name="theme_color_appbar_color">#003399</field>
            <field name="theme_color_appbar_background">#f9f9f9</field>
            <field name="theme_favicon" type="base64" file="ikom/static/description/icon.ico"/>
            <field name="theme_background_image" type="base64" file="ikom/static/img/background.jpg"/>
        </record>

        <function model="res.config.settings" name="execute">
            <value model="res.config.settings" search="[('id', '=', ref('ikom.sales_settings'))]"/>
        </function>
    </data>
</odoo>