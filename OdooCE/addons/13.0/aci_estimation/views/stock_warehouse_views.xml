<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_warehouse_kanban_view" model="ir.ui.view">
        <field name="name">stock.warehouse.kanban.view</field>
        <field name="model">stock.warehouse</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile oe_background_grey o_kanban_dashboard o_project_kanban o_emphasize_colors"
                    create="false">
                <templates>
                     <t t-name="kanban-box">
                        <div class="oe_kanban_global">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>

                                        <div class="col-12">
                                                <span> <field name="partner_id"/></span>
                                        </div>
                                    </div>
                                </div>
                                <button name="show_workcenter_estimation" class="btn-secondary"
                                    type="object"
                                    title="Show Estimation Workcenters">
                                        <span class="fa fa-users"/>
                                 </button>
                                <button name="show_period_estimation" class="btn-secondary"
                                    type="object"
                                    title="Show Period Estimation">
                                        <span class="fa fa-list-alt"/>
                                 </button>
                                <button name="show_restriction" class="btn-secondary"
                                    type="object"
                                    title="Show Restrictions">
                                        <span class="fa fa-lock"/>
                                 </button>
                                <button name="show_nonconformity" class="btn-secondary"
                                    type="object"
                                    title="Show NonConformity">
                                        <span class="fa fa-exclamation-circle"/>
                                 </button>
                                <button name="show_restriction" class="btn-secondary"
                                    type="object"
                                    title="Show NonCompliance">
                                        <span class="fa fa-warning"/>
                                 </button>
                            </div>
                        </div>
                     </t>
                </templates>
             </kanban>
        </field>
    </record>

    <!--    Move to a correct view file-->
    <record id="account_analytic_line_tree_view_inherit" model="ir.ui.view">
        <field name="name">account.analytic.line.tree.view.inherit</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_tree"/>
        <field name="arch" type="xml">
            <field name="account_id" position="before">
                <field name="estimation_id" readonly="1"/>
            </field>
        </field>
    </record>
    <record id="account_analytic_line_form_view_inherit" model="ir.ui.view">
        <field name="name">account.analytic.line.form.view.inherit</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_line_form"/>
        <field name="arch" type="xml">
            <field name="account_id" position="after">
                <field name="estimation_id" readonly="1"/>
            </field>
        </field>
    </record>


</odoo>