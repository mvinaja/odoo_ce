<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- hr_attendance INHERITED VIEWS -->

    <!-- Inherit hr_attendance tree view -->
    <record id="aci_inherit_attendance_tree_view" model="ir.ui.view">
        <field name="name">aci.inherit.attendance.tree.view</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//tree" position="attributes">
                    <attribute name="action">
                        [{
                            "name": "Compute Attendance",
                            "act": "import_attendance_btn",
                            "views": [{"module": "aci_estimation", "xml_id": "compute_attendance_form_view", "type": "form"}],
                            "src_model": "hr.attendance",
                            "res_model": "hr.attendance.actions",
                            "mode": "model"
                        }]
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='employee_id']" position="before">
                    <field name="is_modified" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='employee_id']" position="after">
                    <field name="structure_type_id"/>
                    <field name="date_computed"/>
                    <field name="day_computed"/>
                    <field name="check_in_hour" widget="float_time"/>
                    <field name="check_out_hour" widget="float_time"/>
                    <field name="schedule_delay"/>
                    <field name="period_id"/>
                </xpath>
                <xpath expr="//field[@name='check_in']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='check_out']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </data>
        </field>
    </record>

    <!-- Inherit hr_attendance pivot view -->
    <record id="aci_inherit_attendance_pivot_view" model="ir.ui.view">
        <field name="name">aci.inherit.attendance.pivot.view</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_pivot"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='check_in']" position="replace">
                    <!-- <field name="check_in" type="col" interval="day"/> -->
                    <field name="date_computed" type="col" interval="day"/>
                </xpath>
            </data>
        </field>
    </record>

    <!-- Inherit hr_attendance search view -->
    <record id="aci_inherit_attendance_search_view" model="ir.ui.view">
        <field name="name">attendance.search.view</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_filter"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='department_id']" position="after">
                    <field name="period_id"/>
                    <field name="structure_type_id"/>
                    <field name="date_computed"/>
                    <field name="check_in_hour"/>
                    <field name="check_out_hour"/>
                    <filter name="modified_att" string="Modified" domain="[('is_modified', '=', True)]"/>
                    <separator/>
                    <filter name="not_incidence" string="Not Incidence" domain="[('incidence_id', '=', False)]"/>
                    <filter name="incidence" string="Incidence" domain="[('incidence_id', '!=', False)]"/>
                    <separator/>
                </xpath>
                <xpath expr="//filter[@name='nocheckout']" position="after">
                    <separator/>
                    <filter name="previous_period" string="Previous Periods" domain="[('prev_period', '=', True)]"/>
                </xpath>
                <group expand='0' string='Group By'>
                    <filter string="Day" name="daygroup" context="{'group_by': 'check_in:day'}"/>
                    <filter string="Period" name="periodgroup" context="{'group_by': 'period_id'}"/>
                    <filter string="Department" name="departmentgroup" context="{'group_by': 'department_id'}"/>
                </group>
            </data>
        </field>
    </record>

    <!-- Override hr_attendance actions -->

    <!-- Override principal list action -->
    <record id="hr_attendance.hr_attendance_action" model="ir.actions.act_window">
        <field name="context">{'search_default_previous_period': True, 'custom_datetime_format': True}</field>
        <field name="view_mode">tree,form,pivot</field>
    </record>

    <!-- Override report action -->
    <record id="hr_attendance.hr_attendance_action_graph" model="ir.actions.act_window">
        <field name="context">{'search_default_previous_period': True}</field>
    </record>

</odoo>
