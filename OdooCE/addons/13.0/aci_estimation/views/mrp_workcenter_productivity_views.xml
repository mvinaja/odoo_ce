                        "name": "Close Wo x Wkc",
                        "act": "close_wo_wc_btn",
                        "method": "close_wo_wc_btn",
                        "src_model": "mrp.workcenter.productivity"
                    },
                    {
                        "name": "Cost Approve",
                        "act": "set_approve_btn",
                        "method": "set_approve_btn",
