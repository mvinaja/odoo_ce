                <field name="product_tmpl_wo_id" readonly="1" optional="show"/>
                <field name="product_tmpl_step_id" readonly="1" optional="show"/>
                <field name="version" readonly="1" optional="show"/>
                <field name="analytic_name" readonly="1" optional="show"/>
                <button name="open_analytic_form" icon="fa-external-link" type="object" help="Show Analytic"/>
                <field name="product_model" readonly="1" optional="show"/>
                <field name="workcenter_id" readonly="1" optional="show"/>
                <field name="qty_progress" readonly="1" optional="show"/>
                <field name="progress" readonly="1" optional="show"/>
                <field name="wo_qty_progress" string="Wo Qty" readonly="1" optional="show"/>
                <field name="pay_amount" readonly="1" groups="aci_estimation.group_estimation_manager" optional="show"/>
                <field name="total_pay_amount" readonly="1" groups="aci_estimation.group_estimation_manager" optional="show"/>
                <field name="operation_extra" readonly="1" groups="aci_estimation.group_estimation_manager" optional="show"/>
                <field name="total_operation_extra" readonly="1" groups="aci_estimation.group_estimation_manager" optional="show"/>
                <field name="partial_amount" readonly="1" groups="aci_estimation.group_estimation_manager" optional="show"/>
                <field name="discount" readonly="1" groups="aci_estimation.group_estimation_manager" optional="show"/>
                <field name="discount_amount" readonly="1" groups="aci_estimation.group_estimation_manager" optional="show"/>
                <field name="percentage_discount" readonly="1" groups="aci_estimation.group_estimation_manager" optional="hidden"/>
                <field name="deposit" readonly="1" groups="aci_estimation.group_estimation_manager" optional="show"/>
                <field name="percentage_deposit" readonly="1" groups="aci_estimation.group_estimation_manager" optional="hidden"/>
                <field name="total_cost" string="Cost" readonly="1" groups="aci_estimation.group_estimation_manager" optional="show"/>
                <field name="qty_status" readonly="1" optional="show"/>
                <field name="estimation_id" readonly="1" optional="hidden"/>
                <field name="available" readonly="1" optional="hidden"/>
            </tree>
        </field>
    </record>
    
    <record id="detail_workcenter_productivity_tree_inherit_view" model="ir.ui.view">
    <field name="name">mrp.workcenter.productivity.tree.inherit_detail_tracking</field>
    <field name="model">mrp.workcenter.productivity</field>
    <field name="inherit_id" ref="mrp.oee_tree_view"/>
    <field name="arch" type="xml">
         <xpath expr="//tree" position="replace">
            <tree create="0" delete="1" editable="bottom" string="Workcenter Productivity"
             decoration-info="input_category in ('adjust_plus', 'adjust_minus')" decoration-danger="qty_progress &lt;= 0">
                <field name="input_category" invisible="1"/>
                <field name="date_start" readonly="1"/>
                <field name="offset_start_date" attrs="{'readonly': [('date_end','=', False)]}"/>
                 <field name="date_end" readonly="1"/>
                <field name="offset_end_date" attrs="{'readonly': [('date_end','=', False)]}"/>
                <field name="final_start_date" invisible="1"/>
                <field name="final_end_date" invisible="1"/>
                <field name="duration" string="Duration (minutes)" sum="Duration" readonly="1"/>
                <field name="worked_duration" readonly="1" optional="hidden"/>
                <field name="worked_rate" readonly="1" optional="hidden"/>
                <button name="open_form" icon="fa-external-link-square" type="object" help="Open"/>
                <field name="product_id"/>
                <field name="product_model"/>
                <field name="production_id"/>
                <field name="department_id" readonly="1"/>
                <field name="step_categ"/>
                <field name="analytic_id" readonly="1" optional="hidden"/>
                <field name="analytic_name" readonly="1"/>
                <field name="version" readonly="1"/>
                <field name="workcenter_id" readonly="1"/>
<!--                <field name="qty_manual" string="Qty. Manual" readonly="1"/>-->
                <field name="progress" string="Progress" readonly="1"/>
                <field name="qty_progress" string="Qty. Effective" readonly="1"/>
                <field name="loss_id" readonly="1"/>
                <field name="user_id" readonly="1"/>
                <field name="tracking_origin" readonly="1"/>
                <field name="imputed_by_employee_id" readonly="1"/>
            </tree>
         </xpath>
    </field>
    </record>

    <record id="detail_workcenter_productivity_form_inherit_view" model="ir.ui.view">
    <field name="name">mrp.workcenter.productivity.form</field>
    <field name="model">mrp.workcenter.productivity</field>
    <field name="inherit_id" ref="mrp.oee_form_view"/>
    <field name="priority">5</field>
    <field name="arch" type="xml">
        <xpath expr="//form" position="replace">
            <form string="Workcenter Productivity">
                <sheet>
                    <group col="2">
                        <group>
                            <div class="oe_title">
                                <label for="workcenter_id"/>
                                <h1><field name="workcenter_id" readonly="1"/></h1>
                            </div>
                        </group>
                        <group>
                            <field name="period_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="date_start" readonly="1"/>
                            <field name="offset_start_date" attrs="{'readonly': [('date_end','=', False)]}"/>
                            <field name="date_end" readonly="1"/>
                            <field name="offset_end_date" attrs="{'readonly': [('date_end','=', False)]}"/>
                        </group>
                        <group>
                            <field name="duration" string="Duration (minutes)" sum="Duration" readonly="1"/>
                            <field name="worked_duration" readonly="1"/>
                            <field name="worked_rate" readonly="1"/>
                            <field name="product_id"/>
                            <field name="workorder_by_step" readonly="1"/>
                            <field name="production_by_step" readonly="1"/>
                            <field name="department_id" readonly="1"/>
                            <field name="step_categ"/>
                            <field name="analytic_id" readonly="1"/>
                            <field name="wkcenter" invisible="1"/>
                        </group>
                        <group>
<!--                            <field name="qty_manual" string="Qty. Manual" readonly="1"/>-->
                            <field name="progress" string="Progress" readonly="1"/>
                            <field name="qty_progress" string="Qty. Effective" readonly="1"/>
                            <field name="loss_id" readonly="1"/>
                            <field name="ip" readonly="1"/>
                            <field name="latitude" readonly="1"/>
                            <field name="longitude" readonly="1"/>
                            <field name="user_id" readonly="1"/>
                            <field name="imputed_by_employee_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </xpath>
    </field>
    </record>

     <record id="mrp_workcenter_productivity_quality_restriction_form" model="ir.ui.view">
    <field name="name">mrp.workcenter.productivity.quality.restriction.form</field>
    <field name="model">mrp.workcenter.productivity</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="quality_restriction_ids" nolabel="1">
                    <tree editable="bottom" create="0" delete="0">
                        <field name="product_id" readonly="1"/>
                        <field name="status" readonly="1"/>
                        <button name="change_quality_pass" icon="fa-check" type="object" help="Pass"/>
                        <button name="change_quality_fail" icon="fa-times" type="object" help="Fail"/>
                    </tree>
                </field>
            </group>
            <footer>
                 <button string="Exit" special="cancel" class="btn-default"/>
            </footer>
        </form>
    </field>
    </record>
    
    <record id="detail_workcenter_productivity_kanban_view" model="ir.ui.view">
        <field name="name">mrp.workcenter.productivity.kanban.view</field>
        <field name="model">mrp.workcenter.productivity</field>
        <field name="arch" type="xml">
             <kanban class="oe_background_grey o_kanban_dashboard o_project_kanban o_emphasize_colors"
                    create="false">
                 <field name="duration"/>
                 <field name="loss_id"/>
                 <field name="qty_progress"/>
                 <field name="qty_operators"/>
                 <field name="resource_id"/>
                <templates>
                     <t t-name="kanban-box">
                        <div class="oe_kanban_global">
                            <div class="oe_kanban_details">
                                 <div class="pull-right">
                                    <small>
                                        <label class="o_label">Duration: </label>
                                        <t t-esc="record.duration.value"/>
                                        <div>
                                            <label class="o_label">Qty Progress: </label>
                                            <t t-esc="record.qty_progress.value"/>
                                        </div>
                                        <div>
                                            <label class="o_label">Qty Operators: </label>
                                            <t t-esc="record.qty_operators.value"/>
                                        </div>
                                    </small>
                                 </div>
                                 <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="product_id"/>
                                        </strong>
                                        <small>
                                            <span class="o_kanban_record_subtitle"><field name="resource_id"/></span>
                                        </small>
                                    </div>
                                </div>
                                <a class="o_project_kanban_box">
                                   <label class="o_label">Loss Reason: </label>
                                    <t t-esc="record.loss_id.value"/>
                                </a>
                            </div>
                        </div>
                     </t>
                </templates>
             </kanban>
        </field>
    </record>

    <record id="mrp_workcenter_productivity_estimation_pivot_view" model="ir.ui.view">
            <field name="name">mrp_workcenter_productivity_estimation_pivot_view</field>
            <field name="model">mrp.workcenter.productivity</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="analytic_id" type="row"/>
                    <field name="product_id" type="row"/>
                    <field name="prestim" type="col"/>
                    <field name="wo_qty_progress" string="WO Qty" type="measure"/>
                    <field name="total_pay_amount" type="measure"/>
                    <field name="total_operation_extra" type="measure"/>
                    <field name="total_cost" type="measure"/>
                </pivot>
            </field>
        </record>

    <record id="lbm_work_order_step_productivity_tree_action" model="ir.actions.act_window">
        <field name="name">Productivity Steps</field>
        <field name="res_model">mrp.workcenter.productivity</field>
        <field name="view_mode">tree,form,pivot,kanban,graph,timeline</field>
        <field name="target">current</field>
<!--        <field name="inherit_id" ref="mrp.oee_tree_view"/>-->
        <field name="domain">[('workorder_id', '=', False)]</field>
<!--        <field name="arch" type="xml"></field>-->
    </record>

    <record id="mrp_workorder_productivity_tree_action" model="ir.actions.act_window">
        <field name="name">Productivity WorkOrder</field>
        <field name="res_model">mrp.workcenter.productivity</field>
        <field name="view_mode">tree,form,pivot,kanban,graph,timeline</field>
        <field name="target">current</field>
<!--        <field name="inherit_id" ref="mrp.oee_tree_view"/>-->
        <field name="domain">[('tracking_origin', '=', 'workorder')]</field>
<!--        <field name="arch" type="xml"></field>-->
    </record>

    <record id="tracking_log_search_view" model="ir.ui.view">
        <field name="name">mrp.workcenter.productivity.search.inherit</field>
        <field name="model">mrp.workcenter.productivity</field>
        <field name="inherit_id" ref="mrp.oee_search_view"/>
        <field name="arch" type="xml">
            <field name="loss_id" position="after">
                <field name="analytic_id"/>
                <field name="ip"/>
                <field name="imputed_by_employee_id"/>
                <field name="user_id"/>
                <field name="production_id"/>
                <field name="product_id"/>
                <field name="attr_id"/>
                <field name="department_id"/>
                <field name="step_categ"/>
                <field name="period_id"/>
            </field>
            <filter name="productive" position="after">
                <separator/>
                <filter name="current_period" string="Current Period"
                        domain="[('final_start_date','&lt;=', datetime.datetime.now()),
                                 ('final_end_date','&gt;=', datetime.datetime.now())]"/>
                <separator/>
                <filter name="forecast" string="Prestimations" domain="[('forecast','=', True)]"/>
                <separator/>
                <filter name="pending" string="Pending" domain="[('qty_status','=','pending')]"/>
                <filter name="waiting" string="Waiting Approval" domain="[('qty_status','=','waiting_approval')]"/>
                <filter name="approved" string="Approved" domain="[('qty_status','=','approved')]"/>
                 <separator/>
                <filter name="unproductive" string="Unproductive" domain="[('loss_type','=','unproductive')]"/>
                 <filter string="Project" name="analytic_id" context="{'group_by': 'analytic_id'}"/>
                 <filter name="group_key" string="Group Key" context="{'group_by':'key'}"/>
                 <filter name="products" string="Products" context="{'group_by':'product_id'}"/>

                <filter string='Department' name="deparmentgroup" context="{'group_by': 'department_id'}"/>
                <filter string="Category" name="categorygroup" context="{'group_by': 'step_categ'}"/>
                <filter string="MO" name="mogroup" context="{'group_by': 'production_id'}"/>
                <filter string="Imputed Employee" name="imputedemployeegroup" context="{'group_by': 'imputed_by_employee_id'}"/>
                <filter string="IP" name="ipgroup" context="{'group_by': 'ip'}"/>
                <filter string="User" name="usergroup" context="{'group_by': 'user_id'}"/>
                <filter string="Type" name="typegroup" context="{'group_by': 'type'}"/>
                <separator/>
                <filter string="Day" name="daygroup" context="{'group_by': 'date_start:day'}"/>
                <filter string="Month" name="monthgroup" context="{'group_by': 'date_start:month'}"/>
                <filter string="Period" name="periodgroup" context="{'group_by': 'period_id'}"/>
            </filter>
            <group expand='0' string='Group by...'>
                <filter string='Department' name="deparmentgroup" context="{'group_by': 'department_id'}"/>
                <filter string="Category" name="categorygroup" context="{'group_by': 'step_categ'}"/>
                <filter string="MO" name="mogroup" context="{'group_by': 'production_id'}"/>
                <filter string="Imputed Employee" name="imputedemployeegroup" context="{'group_by': 'imputed_by_employee_id'}"/>
                <filter string="IP" name="ipgroup" context="{'group_by': 'ip'}"/>
                <filter string="User" name="usergroup" context="{'group_by': 'user_id'}"/>
                <filter string="Type" name="typegroup" context="{'group_by': 'type'}"/>
                <separator/>
                <filter string="Day" name="daygroup" context="{'group_by': 'date_start:day'}"/>
                <filter string="Month" name="monthgroup" context="{'group_by': 'date_start:month'}"/>
                <filter string="Period" name="periodgroup" context="{'group_by': 'period_id'}"/>
            </group>
        </field>
    </record>

</odoo>
