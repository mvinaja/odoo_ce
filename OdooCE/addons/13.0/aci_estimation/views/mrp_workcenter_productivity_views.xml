<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="detail_workcenter_productivity_form_view" model="ir.ui.view">
        <field name="name">mrp.workcenter.productivity.form_detail_tracking</field>
        <field name="model">mrp.workcenter.productivity</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="resource_id"/>
                        <field name="final_start_date"/>
                    </group>
                    <group>
                        <field name="loss_id"/>
                        <field name="final_end_date"/>
                    </group>
                </group>
                <group>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

    <record id="mrp_workcenter_productivity_timeline" model="ir.ui.view">
        <field name="model">mrp.workcenter.productivity</field>
        <field name="type">timeline</field>
         <field name="priority">1</field>
        <field name="arch" type="xml">
            <timeline date_start="final_start_date"
                      date_stop="final_end_date"
                      string="Tracking Log"
                      default_group_by="workcenter_id"
                      event_open_popup="true"
                      zoomKey="ctrlKey"
                      colors="#0083ff:tracking_origin == 'step';#4efc91:tracking_origin=='workorder';" >
<!--                      dependency_arrow="task_dependency_ids"-->

                <field name="product_id"/>
                <templates>
                    <div t-name="timeline-item">
                        <span t-esc="record.product_id"/>
                    </div>
                </templates>
            </timeline>
        </field>
    </record>
    <record id="mrp_workcenter_productivity_estimation_tree_view" model="ir.ui.view">
        <field name="name">mrp.workcenter.productivity.estimation.tree.view</field>
        <field name="model">mrp.workcenter.productivity</field>
        <field name="arch" type="xml">
            <tree action='[{
                        "name": "Pending",
                        "act": "pending_input_btn",
                        "views": [{"module": "aci_estimation", "xml_id": "mrp_workcenter_productivity_wizard_form_view", "type": "form"}],
                        "binding_model": "mrp.workcenter.productivity",
                        "res_model": "mrp.workcenter.productivity.wizard",
                        "mode": "model",
                        "context": {"default_type": "selection",
                                    "default_qty_status": "pending"}
                    },{
                        "name": "Start Approval",
                        "act": "set_approval_btn",
                        "views": [{"module": "aci_estimation", "xml_id": "mrp_workcenter_productivity_wizard_form_view", "type": "form"}],
                        "binding_model": "mrp.workcenter.productivity",
                        "res_model": "mrp.workcenter.productivity.wizard",
                        "mode": "model",
                        "context": {"default_type": "selection",
                                    "default_qty_status": "waiting_approval"}
                    },{
                        "title": "Open",
                        "icon": "btn-secondary fa fa-unlock",
                        "act": "open_input_btn",
                        "method": "open_input_btn",
                        "src_model": "mrp.workcenter.productivity"
                    },{
                        "title": "Block",
                        "icon": "btn-secondary fa fa-lock",
                        "act": "block_input_btn",
                        "method": "block_input_btn",
                        "src_model": "mrp.workcenter.productivity"
                    }]' decoration-danger="available == False">
                <field name="tracking_origin" readonly="1" optional="show"/>
                <field name="product_tmpl_wo_id" readonly="1" optional="show"/>
                <field name="product_tmpl_step_id" readonly="1" optional="show"/>
                <field name="version" readonly="1" optional="show"/>
                <field name="analytic_name" readonly="1" optional="show"/>
                <field name="product_model" readonly="1" optional="show"/>
                <field name="workcenter_id" readonly="1" optional="show"/>
                <field name="qty_progress" readonly="1" optional="show"/>
                <field name="progress" readonly="1" optional="show"/>
                <field name="wo_qty_progress" string="Wo Qty" readonly="1" optional="show"/>
                <field name="final_start_date" readonly="1" optional="show"/>
                <field name="final_end_date" readonly="1" optional="show"/>
                <field name="duration" readonly="1" optional="show"/>
                <field name="worked_duration" readonly="1" optional="show"/>
                <field name="worked_rate" readonly="1" optional="hidden"/>
                <field name="qty_status" readonly="1" optional="show"/>
                <field name="estimation_id" readonly="1" optional="show"/>
                <field name="available" readonly="1" optional="hidden"/>
                <field name="employee_ids" readonly="1" widget="many2many_tags"  optional="hidden"/>
                <field name="restriction_ids" readonly="1" widget="many2many_tags"  optional="hidden"/>
                <button name="open_form" icon="fa-external-link" type="object" help="Open"
                        context="{'id_domain': id}"/>
                <button type="object" name="show_input_btn" icon="fa-list" help="Detail"/>
            </tree>
        </field>
    </record>
    <record id="mrp_workcenter_productivity_estimation_cost_tree_view" model="ir.ui.view">
        <field name="name">mrp.workcenter.productivity.estimation.cost.tree.view</field>
        <field name="model">mrp.workcenter.productivity</field>
        <field name="arch" type="xml">
            <tree action='[{
                        "name": "Update P.A.",
                        "act": "update_pay_amount_btn",
                        "method": "update_pay_amount_btn",
                        "src_model": "mrp.workcenter.productivity"
                    },
                    {
                        "name": "Set Extra",
                        "act": "approve_input_btn",
                        "views": [{"module": "aci_estimation",
                         "xml_id": "mrp_workcenter_productivity_wizard_form_view",
                         "type": "form"}],
                        "binding_model": "mrp.workcenter.productivity",
                        "res_model": "mrp.workcenter.productivity.wizard",
                        "mode": "model",
                        "context": {"default_type": "extra"}
                    },
                    {
                        "name": "Discount",
                        "act": "discount_btn",
                        "views": [{"module": "aci_estimation",
                         "xml_id": "mrp_workcenter_productivity_wizard_form_view",
                         "type": "form"}],
                        "binding_model": "mrp.workcenter.productivity",
                        "res_model": "mrp.workcenter.productivity.wizard",
                        "mode": "model",
                        "context": {"default_type": "discount"}
                    },
                    {
                        "name": "Warranty",
                        "act": "deposit_btn",
                        "views": [{"module": "aci_estimation",
                         "xml_id": "mrp_workcenter_productivity_wizard_form_view",
                         "type": "form"}],
                        "binding_model": "mrp.workcenter.productivity",
                        "res_model": "mrp.workcenter.productivity.wizard",
                        "mode": "model",
                        "context": {"default_type": "deposit"}
