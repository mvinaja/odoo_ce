<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_tree_view_inherit" model="ir.ui.view">
        <field name="name">hr.employee.tree.view.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="replace">
                <tree string="Employees" decoration-bf="message_needaction==True" action='[{
                    "name": "Create Contract",
                    "act": "create_contract_btn",
                    "views": [{"module": "aci_estimation",
                    "xml_id": "hr_employee_actions_form_view", "type": "form"}],
                    "binding_model": "hr.employee",
                    "res_model": "hr.employee.actions"
                }]'>
                    <field name="name"/>
                    <field name="work_phone"/>
                    <field name="work_email"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="parent_id"/>
                    <field name="coach_id" invisible="1"/>
                    <field name="message_needaction" invisible="1"/>
                </tree>
            </xpath>
        </field>
        </record>

    <record id="hr_employee_timetracking_inherit" model="ir.ui.view">
        <field name="name">hr.employee.timetracking.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="analytic_account_id"/>
                    <field name="code"/>
                </field>

            <xpath expr="//notebook/page[@name='hr_settings']" position="inside">
                 <group>
                    <group string="Timetracking" name="active_group">
                        <field name="tracking_password" password="True"/></group>
                </group>
            </xpath>
            </field>
    </record>
</odoo>