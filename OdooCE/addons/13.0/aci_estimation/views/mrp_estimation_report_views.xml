<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mrp_estimation_report_form_view" model="ir.ui.view">
            <field name="name">mrp.estimation.report.form.view</field>
            <field name="model">mrp.estimation.report</field>
            <field name="arch" type="xml">
                <form string="Estimation Report">
                    <group col="4">
                        <field name="period_group_id"/>
                        <field name="period_id"/>
                        <field name="report_type"/>
                        <field name="baseline_ids" widget="many2many_tags" attrs="{'invisible': [('report_type', '!=', 'baseline')]}"/>
                        <field name="analytic_ids" widget="many2many_tags" attrs="{'invisible': [('report_type', '!=', 'analytic')]}"/>
                        <field name="warehouse_ids" widget="many2many_tags" attrs="{'invisible': [('report_type', '!=', 'warehouse')]}"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="mrp_estimation_report_tree_view" model="ir.ui.view">
            <field name="name">mrp.estimation.report.tree.view</field>
            <field name="model">mrp.estimation.report</field>
            <field name="arch" type="xml">
                <tree string="Estimation Report" edit="0">
                    <field name="period_group_id"/>
                    <field name="period_id"/>
                    <field name="report_type"/>
                    <field name="baseline_ids" widget="many2many_tags"/>
                    <field name="analytic_ids" widget="many2many_tags"/>
                    <field name="warehouse_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

         <record id="mrp_estimation_report_search" model="ir.ui.view">
            <field name="name">mrp.estimation.report.search</field>
            <field name="model">mrp.estimation.report</field>
            <field name="arch" type="xml">
                <search string="Estimation Report">
                    <field name="year"/>
                    <field name="period_group_id"/>
                    <field name="period_id"/>
                    <field name="report_type"/>
                    <field name="baseline_ids"/>
                    <field name="analytic_ids"/>
                    <field name="warehouse_ids"/>
                    <group expand="0" string="Group By">
                        <filter name="period_group_id" string="Period Group Report" domain="" context="{'group_by':'period_group_id'}"/>
                        <filter name="period_id" string="Period Report" domain="" context="{'group_by':'period_id'}"/>
                        <filter name="report_type" string="Type Report" domain="" context="{'group_by':'report_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_mrp_estimation_report" model="ir.actions.act_window">
            <field name="name">Estimation Reports</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.estimation.report</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_account_financial_report_search"/>
            <field name="view_id" ref="mrp_estimation_report_tree_view"/>
        </record>

        <menuitem id="menu_mrp_estimation_report"
                  name="Reports"
                  sequence="9"
                  parent="aci_estimation.menu_estimation_app"
                  groups="aci_estimation.group_estimation_manager"/>

        <menuitem id="menu_account_reports"
                  name="Piecework"
                  action="action_mrp_estimation_report"
                  parent="menu_mrp_estimation_report"/>

        <menuitem id="menu_mrp_estimation_report_pdf"
                  name="PDF Reports"
                  parent="account.menu_finance_reports"/>

    </data>
</odoo>

