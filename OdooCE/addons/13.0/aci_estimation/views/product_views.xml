<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_search_form_view">
            <field name="name">product.template.search.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <search position="inside">
                    <separator/>
                    <filter string="Budget" name="budget" domain="[('bom_type','=','budget')]"/>
                    <filter string="Phase" name="phase" domain="[('bom_type','=','phase')]"/>
                    <filter string="Model" name="model" domain="[('bom_type','=','model')]"/>
                    <filter string="WorkOrder" name="workorder" domain="[('bom_type','=','workorder')]"/>
                    <filter string="Basic" name="basic" domain="[('bom_type','=','basic')]"/>
                </search>
            </field>
    </record>
    <record id="productivity_type_view_form" model="ir.ui.view">
        <field name="name">productivity.type.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="aci_lbm_flowline.product_template_only_form_view_inherit_aci_lbm_flowline"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='bom_resources']" position="inside">
                <group>
                    <label for="quality_restriction"/>
                    <div class="o_row" attrs="{'invisible': [('bom_type', '!=', 'workorder')]}">
                        <field name="quality_restriction"/>
                        <button type="object" name="quality_configurator_btn" icon="fa-cogs"
                                                class="btn btn-default"/>
                    </div>
                   <field name="step_type"/>
                   <field name="productivity_type"/>
                </group>
            </xpath>
            <xpath expr="//button[@name='action_view_related_putaway_rules']" position="after">
                <button name="action_see_quality_restriction" type="object" class="oe_stat_button"
                        icon="fa-quality"  attrs="{'invisible': [('bom_type', '!=', 'workorder')]}">
                    <field string="Quality Restrictions" name="quality_restriction_qty" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

<record id="repetitive_product_view_form" model="ir.ui.view">
        <field name="name">repetitive.product.view.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='bom_resources']" position="inside">
                <group string="Tracking">
                   <field name="step_type"/>
                   <field name="productivity_type"/>
                </group>
                <group string="Activity Configurator">
                    <field name="is_restriction"/>
                    <field name="is_nonconformity"/>
                    <field name="is_noncompliance"/>
                    <field name="is_quality_control"/>
                    <field name="is_pending"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="product_template_quality_form_view" model="ir.ui.view">
        <field name="name">product.template.quality.form.view</field>
        <field name="model">product.template.quality</field>
        <field name="mode">primary</field>
        <field name="priority" eval="0"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="product_tmpl_id" domain="[('bom_type', '=', 'workorder')]"/>
                        <field name="product_tmpl_rest_id"/>
                        <field name="product_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_template_quality_tree_view" model="ir.ui.view">
        <field name="name">product.template.quality.tree.view</field>
        <field name="model">product.template.quality</field>
        <field name="mode">primary</field>
        <field name="priority" eval="0"/>
        <field name="arch" type="xml">
            <tree>
                <field name="product_tmpl_id"/>
                <field name="product_tmpl_rest_id"/>
                <field name="product_id"/>
            </tree>
        </field>
    </record>

    <record id="product_template_quality_restriction_action" model="ir.actions.act_window">
            <field name="name">Quality Restrictions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template.quality</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a new quality restriction.
                </p>
            </field>
        </record>

    <menuitem id="product_template_quality_menu"
        parent="aci_product.mrp_product_conf_menu"
        action="product_template_quality_restriction_action"
        sequence="55"/>
</odoo>