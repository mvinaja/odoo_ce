<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">

    <record model="ir.module.category" id="estimation_modules_category">
            <field name="name">Estimation</field>
            <field name="sequence">5</field>
            <field name="visible" eval="1" />
    </record>

    <record id="group_estimation_user" model="res.groups">
        <field name="name">User</field>
         <field name="category_id" ref="estimation_modules_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">the user will be able to set timetrackings.</field>
    </record>

    <record id="group_estimation_resident" model="res.groups">
        <field name="name">Resident</field>
        <field name="comment">You have access to all of users information.</field>
         <field name="category_id" ref="estimation_modules_category"/>
        <field name="implied_ids" eval="[(4, ref('group_estimation_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

    <record id="group_estimation_manager" model="res.groups">
        <field name="name">Supervisor</field>
        <field name="comment">You can approve qty</field>
         <field name="category_id" ref="estimation_modules_category"/>
        <field name="implied_ids" eval="[(4, ref('group_estimation_resident'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

    <record id="group_estimation_chief" model="res.groups">
        <field name="name">Chief Officer</field>
        <field name="comment">Full Access</field>
         <field name="category_id" ref="estimation_modules_category"/>
        <field name="implied_ids" eval="[(4, ref('group_estimation_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

    <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('group_estimation_user'))]"/>
    </record>
</data>
</odoo>
