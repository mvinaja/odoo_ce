<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_productivity_block_incidence_form_view" model="ir.ui.view">
        <field name="name">hr.productivity.block.incidence.form.view</field>
        <field name="model">hr.productivity.block.incidence</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <span> This tool would create incidences (draft) according to dates and workcenters.
                    Are you sure you want to continue?</span>
                    <field name="description"/>
                    <field name="type_incidence"/>
                </group>
                <footer>
                    <button type="object" name="convert_incidence_btn" string="Create Incidences" class="btn btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>