<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="popup_message_form" model="ir.ui.view">
    <field name="name">popup.message.form</field>
    <field name="model">popup.message</field>
    <field name="arch" type="xml">
        <form>
            <p class="text-center">
                <field name="message" readonly="1"/>
            </p>
            <notebook>
                 <page string="Error">
                        <label for="error_log_ids"/>
                        <field name="error_log_ids" readonly="1">
                            <tree>
                                <field name="state"/>
                                <field name="production_id"/>
                                <field name="workorder_id"/>
                                <field name="product_id"/>
                                <field name="workcenter_id"/>
                                <field name="contract_id"/>
                                <field name="employee_id"/>
                            </tree>
                        </field>
                    </page>
                 <page string="Warning">
                        <label for="warning_log_ids"/>
                        <field name="warning_log_ids" readonly="1">
                            <tree>
                                <field name="state"/>
                                <field name="workorder_id"/>
                                <field name="product_id"/>
                                <field name="workcenter_id"/>
                                <field name="contract_id"/>
                                <field name="employee_id"/>
                            </tree>
                        </field>
                    </page>
            </notebook>
            <footer>
                <button name="done_btn" string="Close" type="object" default_focus="1" class="oe_highlight"/>
            </footer>
        </form>
    </field>
</record>
</odoo>