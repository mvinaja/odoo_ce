<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="mrp_estimation_calculator_form_view" model="ir.ui.view">
        <field name="name">mrp.estimation.calculator.form.view</field>
        <field name="model">mrp.estimation.calculator</field>
        <field name="arch" type="xml">
                <form>
                    <field name="mode" invisible="1"/>
                    <div class="o_row">
                        <field name="int_result" nolabel="1" class="calculator_result"
                               attrs="{'invisible': [('mode', '!=', 'integer')]}"/>
                        <field name="float_result" nolabel="1" class="calculator_result"
                               attrs="{'invisible': [('mode', '!=', 'float')]}"/>
                    </div>
                    <div class="calculator_main">
                        <div class="calculator_div">
                            <button name="number_7_btn" type="object" class="calculator_button">
                                <span class="calculator_text">7</span>
                            </button>
                        </div>
                        <div class="calculator_div">
                        <button name="number_8_btn" type="object" class="calculator_button">
                            <span class="calculator_text">8</span>
                        </button>
                        </div>
                        <div class="calculator_div">
                        <button name="number_9_btn" type="object" class="calculator_button">
                            <span class="calculator_text">9</span>
                        </button>
                        </div>
                        <div class="calculator_div">
                        <button name="number_4_btn" type="object" class="calculator_button">
                            <span class="calculator_text">4</span>
                        </button>
                        </div>
                        <div class="calculator_div">
                        <button name="number_5_btn" type="object" class="calculator_button">
                            <span class="calculator_text">5</span>
                        </button>
                        </div>
                        <div class="calculator_div">
                        <button name="number_6_btn" type="object" class="calculator_button">
                            <span class="calculator_text">6</span>
                        </button>
                        </div>
                        <div class="calculator_div">
                        <button name="number_1_btn" type="object" class="calculator_button">
                            <span class="calculator_text">1</span>
                        </button>
                        </div>
                        <div class="calculator_div">
                        <button name="number_2_btn" type="object" class="calculator_button">
                            <span class="calculator_text">2</span>
                        </button>
                        </div>
                        <div class="calculator_div">
                        <button name="number_3_btn" type="object" class="calculator_button">
                            <span class="calculator_text">3</span>
                        </button>
                        </div>
                        <div class="calculator_div">
                        <button name="expresion_clear_btn" type="object" class="calculator_button">
                            <span class="calculator_text">C</span>
                        </button>
                        </div>
                        <div class="calculator_div">
                        <button name="number_0_btn" type="object" class="calculator_button">
                            <span class="calculator_text">0</span>
                        </button>
                        </div>
                        <field name="mode" invisible="1"/>
                        <div class="calculator_div" attrs="{'invisible': [('mode', '!=', 'float')]}">
                        <button name="expresion_point_btn" type="object" class="calculator_button">
                            <span class="calculator_text">.</span>
                        </button>
                        </div>
                        <div class="calculator_div">
                        <button name="expresion_send_btn" type="object" class="calculator_button">
                            <span class="calculator_text">&#10004;</span>
                        </button>
                        </div>
                    </div>
                    <footer>
                        <button special="cancel" string="Cancel" class="btn-default"/>
                    </footer>
                </form>
        </field>
    </record>
</odoo>
