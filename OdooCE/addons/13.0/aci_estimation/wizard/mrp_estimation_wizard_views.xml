<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="mrp_estimation_wizard_form_view" model="ir.ui.view">
            <field name="name">mrp.estimation.wizard.form.view</field>
            <field name="model">mrp.estimation.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group col="2">
                        <field name="readonly" invisible="1"/>
                        <field name="domain_period_group_ids" widget="many2many_tags" invisible="1"/>
                        <field name="domain_period_ids" widget="many2many_tags" invisible="1"/>
                        <field name="workcenter_id" readonly="1"/>
                        <field name="period_group_id" options="{'no_create': 1, 'no_edit': 1, 'no_open': 1}"
                               domain="[('id', 'in', domain_period_group_ids)]"
                               attrs="{'readonly': [('readonly', '=', True)]}"
                        />
                        <field name="period_id" options="{'no_create': 1, 'no_edit': 1, 'no_open': 1}"
                        domain="[('id', 'in', domain_period_ids), ('group_id', '=', period_group_id)]"
                        attrs="{'readonly': [('readonly', '=', True)]}"/>
                    </group>
                    <group col="4">
                        <field name="period_from"/>
                        <field name="period_to"/>
                    </group>
                    <footer>
                        <button type="object" name="create_estimation_btn" string="Create" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="mrp_estimation_crew_wizard_form_view" model="ir.ui.view">
            <field name="name">mrp.estimation.crew.wizard.form.view</field>
            <field name="model">mrp.estimation.crew.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group col="8">
                        <group col="1">
                            <field name="date_ids" readonly="1" nolabel="1"
                                   options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group colspan="4" col="2">
                            <group colspan="4" col="1">
                                <label for="employee_ids"/>
                                <field name="employee_ids"  nolabel="1"
                                       options="{'no_create': True, 'no_open': True}">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="employee_id" readonly="1"/>
                                        <field name="block_available"/>
                                    </tree>
                                </field>
                            </group>
                            <group colspan="4" col="1">
                                <label for="employee_crew_ids"/>
                                <field name="employee_crew_ids"  nolabel="1"
                                       options="{'no_create': True, 'no_open': True}">
                                    <tree edit="0" create="0">
                                        <field name="employee_id"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </group>
                    <footer>
                        <button name="create_activity_btn" string="Create" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>


</odoo>
