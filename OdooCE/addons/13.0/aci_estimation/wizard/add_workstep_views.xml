<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="add_workorder_step_wizard_form_view" model="ir.ui.view">
            <field name="name">add.workorder.step.wizard.form.view</field>
            <field name="model">add.workorder.step.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <label for="origin"/>
                                <div class="o_row">
                                    <field name="origin" required="1" widget="radio"/>
                                    <field name="type" required="1" widget="radio"/>
                                </div>

                                <field name="operation_amount" invisible="1"/>
                                <field name="operation_extra" invisible="1"/>
                                <field name="operation_labor" invisible="1"/>
                                <field name="crew_amount" invisible="1"/>
                            </group>
                            <group>
                                <field name="target_workorder" colspan="2" readonly="1"/>
                                <field name="context_warehouse" colspan="2"
                                    options="{'no_create': True}"
                                    attrs="{'invisible': [('origin','=','product')],
                                            'required': [('origin','!=','product')]}"/>
                                <field name="context_bom" colspan="2"
                                    options="{'no_create': True}"
                                    attrs="{'invisible': ['|', ('origin','=','product'),('workstep_ids', '=', [])],
                                            'required': [('origin','!=','product')]}"/>
                                <label for="source_boms"
                                    attrs="{'invisible': [('origin','!=','bom')]}"/>
                                <div class="o_row">
                                    <field name="source_boms"
                                        attrs="{'invisible': [('origin','!=','bom')]}"
                                        domain="[('context_warehouse','=',context_warehouse),('bom_type','=','basic')]"
                                        widget="many2many_selection" options="{'no_create': True}"/>
                                </div>
                                <label string="From"
                                    attrs="{'invisible': [('origin','!=','component')]}"/>
                                <div class="o_row">
                                    <field name="components_bom" options="{'no_create': True}"
                                        context="{'tree_view_ref': 'aci_mrp_plm.mrp_bom_list_view'}"
                                        domain="[('context_warehouse','=',context_warehouse),('bom_type','=','basic')]"
                                        attrs="{'invisible':[('origin','!=','component')],
                                                'required':[('origin','=','component')]}"/>
                                    <field name="source_lines"
                                        attrs="{'invisible': [('origin','!=','component')]}"
                                        domain="[('bom_id','=',components_bom)]"
                                        widget="many2many_selection" options="{'no_create': True}"/>
                                </div>
                                <label string="From"
                                    attrs="{'invisible': [('origin','!=','product')]}"/>
                                <div class="o_row">
                                    <field name="source_products"
                                        attrs="{'invisible': [('origin','!=','product')]}"
                                        widget="many2many_selection" options="{'no_create': True}"/>
                                </div>
                                <field name="product_qty" required="1"/>
                                <field name="rate" required="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="workstep_ids" nolabel="1"
                                options="{'no_create': True}" colspan="2">
                                <tree editable="top" create="0">
                                    <field name="product_id"/>
                                    <field name="bom_id"/>
                                    <field name="rate"/>
                                    <field name="rate_uom"/>
                                    <field name="time_uom"/>
                                    <field name="product_qty"/>
                                    <field name="duration" widget="float_time"/>
                                    <field name="add_value"/>
                                    <field name="value_factor" attrs="{'readonly': [('add_value','=',False)]}"/>
                                    <field name="unit_price"/>
                                    <field name="component_price"/>
                                    <field name="unit_extra" invisible="1"/>
                                    <field name="unit_labor" invisible="1"/>
                                    <field name="pay_amount" invisible="1"/>
                                    <field name="extra_cost" invisible="1"/>
                                    <field name="labor_cost" invisible="1"/>
                                </tree>
                            </field>
                        </group>
                        <footer>
                            <button type="object" name="add_workstep_btn"
                                string="Add Workstep" class="btn-primary"/>
                            <button special="cancel" string="Cancel" class="btn-default"/>
                        </footer>
                  </sheet>
                </form>
            </field>
        </record>

        <record id="add_workorder_step_wizard_action" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Add Workstep</field>
            <field name="res_model">add.workorder.step.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_ids"
                eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('add_workorder_step_wizard_form_view')})]"/>
        </record>

        <record id="copy_workorder_step_wizard_form_view" model="ir.ui.view">
            <field name="name">copy.workorder.step.wizard.form.view</field>
            <field name="model">copy.workorder.step.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="source_workorder" readonly="1"/>
                            </group>
                            <group>
                                <field name="action"/>
                            </group>
                        </group>
                        <group string="Target">
                            <field name="target_workorders" nolabel="1"
                                domain="[('id', '!=', source_workorder)]"
                                options="{'no_create': True}" colspan="2">
                                <tree editable="top">
                                    <field name="production_id"/>
                                    <field name="product_wo"/>
                                </tree>
                            </field>
                        </group>
                        <footer>
                            <button type="object" name="perform_action"
                                string="Add Workstep" class="btn-primary"/>
                            <button special="cancel" string="Cancel" class="btn-default"/>
                        </footer>
                  </sheet>
                </form>
            </field>
        </record>

        <record id="copy_workorder_step_wizard_action" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Copy Params</field>
            <field name="res_model">copy.workorder.step.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_ids"
                eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('copy_workorder_step_wizard_form_view')})]"/>
        </record>

    </data>
</odoo>
