<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_actions_form_view" model="ir.ui.view">
            <field name="name">hr.employee.actions.form.view</field>
            <field name="model">hr.employee.actions</field>
            <field name="arch" type="xml">
                 <form>
                     <group>
                        <field name="employee_ids" widget="many2many_tags"/>
                     </group>
                    <group colspan="4" col="4" string="Contract Details">
                        <field name="create_project" />
                        <field name="project_id" attrs="{'invisible': [('create_project', '=', True)]}"/>
                        <field name="resource_calendar_id" required="1" options="{'no_create': True, 'no_create_edit':True}"/>
                        <field name="date_start" required="1"/>
                        <field name="wage" required="1"/>
                        <field name="state" required="1"/>
                        <field name="tolerance" required="1"/>
                        <field name="tolerance_time" required="1"/>
                        <field name="period_group_id" required="1"/>
                    </group>
                    <footer>
                        <button type="object" name="create_contract_btn" string="Create Contract" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>
</odoo>