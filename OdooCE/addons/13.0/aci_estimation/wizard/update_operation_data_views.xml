<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="update_workorder_form_wizard" model="ir.ui.view">
            <field name="name">update.workorder.wizard.form.view</field>
            <field name="model">update.workorder.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    </sheet>
                    <footer>
                        <button type="object" name="update_data_btn"
                            string="Update Workorders" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="update_workorder_wizard_action" model="ir.actions.act_window">
            <field name="name">Update Workorder</field>
            <field name="res_model">update.workorder.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
