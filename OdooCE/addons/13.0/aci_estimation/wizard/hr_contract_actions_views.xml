<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Create contract massively form view -->
    <record id="create_massive_contract_form_view" model="ir.ui.view">
        <field name="name">create.massive.contract.form.view</field>
        <field name="model">hr.contract.actions</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="resource_calendar_id" options="{'no_create': True}"/>
                        <field name="period_group_id" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <notebook>
                            <page string="Employees">
                                <field name="employee_ids">
                                    <tree create="0">
                                        <field name="employee_id" readonly="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </group>
                <footer>
                    <button type="object" name="generate_contracts" string="Generate" class="btn btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Assign period group to contract massively form view-->
    <record id="assign_period_group_to_contract_form_view" model="ir.ui.view">
        <field name="name">assign.period.group.to.contract.form.view</field>
        <field name="model">hr.contract.actions</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="period_group_id" required="1" options="{'no_create': True}"/>
                </group>
                <group>
                    <notebook>
                        <page string="Contracts">
                            <field name="contract_ids">
                                <tree create="0" >
                                    <field name="contract_id" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </group>
                <footer>
                    <button type="object" name="assign_period_group_button" string="Assign" class="btn btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="assign_workcenter_to_contract_form_view" model="ir.ui.view">
        <field name="name">assign.workcenter.to.contract.form.view</field>
        <field name="model">hr.contract.actions</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <notebook>
                        <page string="Workcenters">
                            <field name="workcenter_ids">
                                <tree create="0" editable="bottom" >
                                    <field name="contract_id" readonly="1"/>
                                    <field name="workcenter_id" options="{'no_create': True}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </group>
                <footer>
                    <button type="object" name="assign_workcenter_button" string="Assign" class="btn btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
