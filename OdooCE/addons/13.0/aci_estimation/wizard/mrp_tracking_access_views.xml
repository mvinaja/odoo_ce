<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_tracking_action" model="ir.actions.act_window">
        <field name="name">Time Tracking</field>
        <field name="res_model">mrp.tracking.access</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_tracking_by':'step',
            'default_tracking_method': 'building'}</field>
    </record>
    <record id="mrp_tracking_wo_action" model="ir.actions.act_window">
        <field name="name">Time Tracking</field>
        <field name="res_model">mrp.tracking.access</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_tracking_by':'workorder',
            'default_tracking_method': 'building'}</field>
    </record>
    <record id="mrp_tracking_periodic_action" model="ir.actions.act_window">
        <field name="name">Time Tracking</field>
        <field name="res_model">mrp.tracking.access</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_tracking_by':'step',
            'default_tracking_method': 'periodic'}</field>
    </record>
    <record id="mrp_tracking_wo_periodic_action" model="ir.actions.act_window">
        <field name="name">Time Tracking</field>
        <field name="res_model">mrp.tracking.access</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_tracking_by':'workorder',
            'default_tracking_method': 'periodic'}</field>
    </record>
    <record id="mrp_tracking_active_action" model="ir.actions.act_window">
        <field name="name">Time Tracking</field>
        <field name="res_model">mrp.tracking.access</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_tracking_by':'step',
            'default_tracking_method': 'building',
            'default_tracking_is_active':True}</field>
    </record>
    <record id="mrp_tracking_wo_active_action" model="ir.actions.act_window">
        <field name="name">Time Tracking</field>
        <field name="res_model">mrp.tracking.access</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_tracking_by':'workorder',
            'default_tracking_method': 'building',
            'default_tracking_is_active':True}</field>
    </record>
    <record id="mrp_tracking_periodic_active_action" model="ir.actions.act_window">
        <field name="name">Time Tracking</field>
        <field name="res_model">mrp.tracking.access</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_tracking_by':'step',
            'default_tracking_method': 'periodic',
            'default_tracking_is_active':True}</field>
    </record>
    <record id="mrp_tracking_wo_periodic_active_action" model="ir.actions.act_window">
        <field name="name">Time Tracking</field>
        <field name="res_model">mrp.tracking.access</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_tracking_by':'workorder',
            'default_tracking_method': 'periodic',
            'default_tracking_is_active':True}</field>
    </record>
    <!-- ACCESS (WIZARD) -->
    <record id="view_mrp_tracking_access_form" model="ir.ui.view">
            <field name="name">mrp.tracking.access.form</field>
            <field name="model">mrp.tracking.access</field>
            <field name="arch" type="xml">
                <form>
                    <group colspan="2" col="2" string="Access Key">
                        <field name="workcenter_id"  domain="[('resource_type', '=', 'alternative'),
                                                              ('on_estimation', '=', True)]" string="Workcenter ID" options="{'no_create_edit': True,
                            'no_create':True, 'no_open':True}"/>
                        <field name="access_key" string="Password" type="password" password="True"/>
                    </group>
                    <footer>
                        <button name="access_key_btn" string="Access" class="oe_highlight"
                                type="object"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
    </record>
</odoo>