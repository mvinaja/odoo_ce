<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Parse and Import attendance log -->
    <record id="parse_and_import_attendance_log_form_view" model="ir.ui.view">
        <field name="name">parse.and.import.attendance.log.form.view</field>
        <field name="model">attendance.log.actions</field>
        <field name="arch" type="xml">
            <form>
                <field name="dat_name" invisible="1"/>
                <group>
                    <group>
                        <field name="dat_file" filename="dat_name" required="1"/>
                        <field name="payment_period_grp" required="1" options="{'no_create': True}"/>
                        <field name="date_from"/>
                        <field name="all_employees"/>
                    </group>
                    <group>
                        <field name="year"/>
                        <field name="period_id" required="1" domain="[('group_id', '=', payment_period_grp)]" options="{'no_create': True}"/>
                        <field name="date_to"/>
                        <field name="employee_ids" widget="many2many_tags" options="{'no_create': True}"
                            attrs="{'invisible': [('all_employees', '=', True)]}"/>
                    </group>
                </group>
                <footer>
                    <button name="parse_and_import_button" type="object" string="Import"
                        class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Discard nearby attendance log by employee -->
    <record id="discard_nearby_form_view" model="ir.ui.view">
        <field name="name">discard.nearby.form.view</field>
        <field name="model">attendance.log.actions</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <div colspan="2">
                        <p>Discard nearby logs?</p>
                    </div>
                    <footer>
                        <button name="discard_nearby_button" type="object"
                            string="Discard" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-default"/>
                    </footer>
                </group>
            </form>
        </field>
    </record>

    <!-- Generate massive attendance log -->
    <record id="generate_massive_att_logs_by_period_form_view" model="ir.ui.view">
        <field name="name">generate.massive.att.logs.by.period.form.view</field>
        <field name="model">attendance.log.actions</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="year" required="1"/>
                        <field name="period_id" required="1"
                            domain="[('group_id', '=', payment_period_grp)]" options="{'no_create': True}"/>
                        <field name="dayofweek"/>
                        <field name="exclude_employee_ids"
                            widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="payment_period_grp" required="1" options="{'no_create': True}"/>
                        <label for="hour" string="Hour"/>
                        <div class="o_row">
                            <field name="hour" required="1"/> : <field name="minutes" required="1"/>
                        </div>
                        <field name="date"/>
                        <field name="to_employee_ids"
                            widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                </group>
                <footer>
                    <button name="generate_masssive_checks_by_period_button" type="object"
                        string="Generate" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
