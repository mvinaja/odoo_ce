<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <data noupdate="0">

    <record id="cost_estim_report" model="ir.actions.report">
         <field name="name">Cost Report</field>
         <field name="model">lbm.period</field>
         <field name="report_type">qweb-pdf</field>
         <field name="report_name">aci_estimation.cost_estim_period_report_view</field>
         <field name="report_file">event.event_event_report_template_badge</field>
         <field name="paperformat_id" ref="aci_estimation.paperformat_cost_estimation_landscape_report"/>
     </record>

    <template id="cost_estim_period_report_view">
        <t t-call="web.html_container">
            <div class="header" style="border-bottom: 1px solid black;">
                <h3 class="text-center">Cost Report
                    <span style="font-size: 14px;"><strong>Period</strong>: <t t-esc="period_id.name"/></span>
                </h3>
            </div>
            <div class="article mt0 o_report_layout_standard">
                <table>
                    <thead>
                        <th style="width: 5%; font-size:10px;">Period</th>
                        <th style="width: 5%; font-size:10px;">Wkcenter</th>
                        <th style="width: 15%; font-size:10px;">Employee</th>
                        <th style="width: 10%; font-size:10px;">Party</th>
                        <th style="width: 10%; font-size:10px;">Concept</th>
                        <th style="width: 10%; font-size:10px;">Location</th>
                        <th style="width: 5%; font-size:10px;">Qty</th>
                        <th style="width: 5%; font-size:10px;">Dur (min)</th>
                        <th style="width: 5%; font-size:10px;">Crew</th>
                        <th style="width: 5%; font-size:10px;">H/H (min)</th>
                        <th style="width: 5%; font-size:10px;">Sub.</th>
                        <th style="width: 5%; font-size:10px;">Extra</th>
                        <th style="width: 5%; font-size:10px;">Disc.</th>
                        <th style="width: 5%; font-size:10px;">Warr.</th>
                        <th style="width: 5%; font-size:10px;">Total</th>
                    </thead>
                    <tbody style="font-size:10px;">
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <td><span t-esc="doc['period']"/></td>
                                <td><span t-esc="doc['workcenter']"/></td>
                                <td><span t-esc="doc['employee']"/></td>
                                <td><span t-esc="doc['party']"/></td>
                                <td><span t-esc="doc['concept']"/></td>
                                <td><span t-esc="doc['location']"/></td>
                                <td style="text-align:right;"><span t-esc="doc['qty']"/></td>
                                <td style="text-align:right;"><span t-esc="doc['duration']"/></td>
                                <td style="text-align:right;"><span t-esc="doc['crew']"/></td>
                                <td style="text-align:right;"><span t-esc="doc['worked_duration']"/></td>
                                <t t-if="doc['type'] == 'total'">
                                    <td style="font-weight: bold; text-align:right;"><span t-esc="doc['total_pay']"/></td>
                                    <td style="font-weight: bold; text-align:right;"><span t-esc="doc['total_extra']"/></td>
                                    <td style="color:red; font-weight: bold; text-align:right;"><span t-esc="doc['total_discount']"/></td>
                                    <td style="color:red; font-weight: bold; text-align:right;"><span t-esc="doc['total_deposit']"/></td>
                                    <td style="color:blue; font-weight: bold; text-align:right;"><span t-esc="doc['total_cost']"/></td>
                                </t>
                                <t t-else="">
                                    <td style="text-align:right;"><span t-esc="doc['total_pay']"/></td>
                                    <td style="text-align:right;"><span t-esc="doc['total_extra']"/></td>
                                    <td style="color:red; text-align:right;"><span t-esc="doc['total_discount']"/></td>
                                    <td style="color:red; text-align:right;"><span t-esc="doc['total_deposit']"/></td>
                                    <td style="color:blue; text-align:right;"><span t-esc="doc['total_cost']"/></td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="footer o_standard_footer" style="border-top: 1px solid black;">
                <div class="row text-center">
                    <div class="col col-12 text-center" style="font-size:10px;">
                        <ul class="list-inline">
                            <li class="list-inline-item">Page:<span class="page"/>/<span class="topage"/></li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>
        </data>
</odoo>