<templates xml:space="preserve">

    <t t-extend="mail.ChatterTopbar">
        <t t-jquery="button.o_ChatterTopbar_button" t-operation="after">
            <button class="btn btn-link o_chatter_button_all_activity"
                    title="Show Activity" disabled="disabled"
                    t-on-click="_onClickAllActivity">
                <i class="fa fa-list-alt" role="img" aria-label="All Activities" title="All Activities"/>
            </button>
            <button class="btn btn-link o_chatter_button_rest_activity"
                    title="Show Restrictions" disabled="disabled"
                    t-on-click="_onClickRestrictionActivity">
                <i class="fa fa-lock" role="img" aria-label="Restrictions" title="Restrictions"/>
            </button>
            <button class="btn btn-link o_chatter_button_nonc_activity"
                    title="Show noncompliance" disabled="disabled"
                    t-on-click="_onClickNoncomplianceActivity">
                <i class="fa fa-warning" role="img" aria-label="Noncompliance" title="Noncompliance"/>
            </button>
            <button class="btn btn-link o_chatter_button_noncon_activity"
                    title="Show nonconformity" disabled="disabled"
                    t-on-click="_onClickNonconformityActivity">
                <i class="fa fa-exclamation-circle" role="img" aria-label="Nonconformity" title="Nonconformity"/>
            </button>
            <button class="btn btn-link o_chatter_button_conf_activity"
                    title="Restrictions" disabled="disabled"
                    t-on-click="_onClickConfiguratorActivity">
                <i class="fa fa-cogs" role="img" aria-label="Configurator" title="Configurator"/>
            </button>
        </t>
    </t>
